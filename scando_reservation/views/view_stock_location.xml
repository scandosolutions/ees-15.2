<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_stock_location_form_inherit_reserv_location" model="ir.ui.view">
            <field name="name">stock.location.inherit.reservation.location</field>
            <field name="model">stock.location</field>
            <field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='additional_info']/field[@name='return_location']" position="after">
                    <field name="reservation_location" groups="stock.group_stock_manager"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
